{% extends 'base.html.twig' %}

{% block title %}Votre historique de demandes de services{% endblock %}

{% block body %}
    {% block content %}


        <div class="sub_header_in sticky_header">
            <div class="container">
                <h1>Mes demandes de services</h1>
            </div>
            <!-- /container -->
        </div>
        <!-- /sub_header -->

        <main>
            <div class="container margin_60_35">
                <div class="box_booking">
                    {% if app.user.demands|length >0 %}
                    {% for demand in app.user.demands %}

                        <div class="strip_booking">
                            <div class="row">
                            {#{% for execution in executions %}#}
                                <div class="col-lg-2 col-md-2">
                                    <div class="date">
                                        <span class="month">Proposition n° {{ demand.id }}</span>
                                        <span class="day">Image</span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-5">
                                    <h3>{{ demand.title }}</h3>

                                </div>
                                <div class="col-lg-2 col-md-3">
                                    <ul class="info_booking">

                                        {% for execution in executions %}
                                            <li><strong>Par : {{ execution.provider.name }}</strong></li>
                                        {% endfor %}
                                    </ul>
                                </div>

                                <div class="col-lg-2 col-md-2">
                                    <div class="booking_buttons">
                                        {#<a href="{{ path('execution_show', {'id':execution.id}) }}" class="btn_2">Info</a>#}
                                        <a href="#" class="btn_2">Info</a>
                                        <a href="#" class="btn_3">Supprimer</a>
                                    </div>
                                </div>

                            </div>

                            <!-- /row -->
                        </div>
                    {% endfor %}
                {% else %}
                     Vous n'avez pas encore déposé de demande
                {% endif %}



                </div>
                <!-- /box_booking -->
                {#<p class="text-right"><a href="checkout.html" class="btn_1">Checkout</a></p>#}
            </div>
            <!-- /container -->
        </main>
        <!--/main-->


        </div>
        <!-- page -->
    {% endblock %}
{% endblock %}