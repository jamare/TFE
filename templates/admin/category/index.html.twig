{% extends 'admin/base.html.twig' %}

{% block title %}Administration des catégories de services{% endblock %}

{% block body %}
    {% block content %}
        <div class="container-fluid0">
            <h1 class="my-5">Gestion des catégories de services</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('admin_category_edit', {'id': category.id}) }}">Edit</a> | <a href="{{ path('admin_category_delete', {'id': category.id}) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'admin/partials/pagination.html.twig' with {'route': 'admin_category_index'} %}
            <a href="{{ path('admin_category_create') }}"><button class="btn btn-primary">Ajouter une catégorie</button></a>
        </div>
    {% endblock %}
{% endblock %}
