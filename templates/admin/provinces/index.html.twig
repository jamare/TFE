{% extends 'admin/base.html.twig' %}

{% block title %}Administration des provinces{% endblock %}

{% block body %}
    {% block content %}
        <div class="container-fluid0">
            <h1 class="my-5">Gestion des provinces</h1>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for province in provinces %}
                    <tr>
                        <td>{{ province.id }}</td>
                        <td>{{ province.name }}</td>
                        <td>
                            <a href="{{ path('admin_province_edit', {'id': province.id}) }}">Edit</a> | <a href="{{ path('admin_province_delete', {'id': province.id}) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'admin/partials/pagination.html.twig' with {'route': 'admin_provinces_index'} %}
            <a href="{{ path('admin_province_create') }}"><button class="btn btn-primary">Ajouter une province</button></a>
        </div>
    {% endblock %}
{% endblock %}
