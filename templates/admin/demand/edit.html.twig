{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce nÂ° {{ demand.id }}{% endblock %}

{% block body %}
    {% block content %}
        <div class="container"></div>
            <h1 class="my-5"> Modification de l'annonce {{ demand.title }}</h1>

            {{ form_start(form) }}

            <div class="row">
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h4 class="card-title">Corriger l'annonce ?</h4>
                        </div>
                        <div class="card-body">
                            {{ form_widget(form) }}

                            <button type="submit" class="btn btn-primary">
                                Enregistrer les modifications
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h4 class="card-title">Les prestataires</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Prestataire</th>
                                        <th>Date des travaux</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for execution in demand.executions %}
                                    <tr>
                                        <td>{{ execution.id }}</td>
                                        <td>{{ execution.provider.name }}</td>
                                        <td>{{ execution.createdAt | date('d/m/Y H:i') }}</td>
                                        <td>
                                            <a href="#" class="btn btn-primary">
                                                Edit
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>



            {{ form_end(form) }}
        </div>
    {% endblock %}

{% endblock %}